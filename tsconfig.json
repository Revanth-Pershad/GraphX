{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./dest",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}